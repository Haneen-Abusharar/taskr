<h2>All Tasks</h2>
<p>
  <%= link_to 'New Task', new_task_path %>
</p>
<table>
  <tr>
    <th>content</td>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.content %></td>
      <td><%= link_to 'Show', task_path(task)  %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Delete' ,task_path(task), method: :delete, 
      data: {confirm: "are you sure you want to delete the task ?"} %></td>
    </tr>
  <% end %>
</table>
